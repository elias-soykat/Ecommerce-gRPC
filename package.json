{
  "name": "ecommerce-grpc-microservices",
  "version": "1.0.0",
  "description": "Production-ready microservice-based eCommerce application using gRPC",
  "main": "index.js",
  "scripts": {
    "start": "docker compose up --build",
    "stop": "docker compose down",
    "restart": "docker compose restart",
    "logs": "docker compose logs -f",
    "build": "docker compose build --no-cache",
    "clean": "docker compose down -v --remove-orphans",
    "test": "node test-services.js",
    "status": "docker compose ps",
    "user-logs": "docker compose logs -f user-service",
    "product-logs": "docker compose logs -f product-service",
    "order-logs": "docker compose logs -f order-service",
    "db-logs": "docker compose logs -f postgres-user postgres-product postgres-order",
    "install-deps": "npm run install-deps:user && npm run install-deps:product && npm run install-deps:order",
    "install-deps:user": "cd user-service && npm install",
    "install-deps:product": "cd product-service && npm install",
    "install-deps:order": "cd order-service && npm install",
    "dev": "concurrently \"npm run dev:user\" \"npm run dev:product\" \"npm run dev:order\"",
    "dev:user": "cd user-service && npm run dev",
    "dev:product": "cd product-service && npm run dev",
    "dev:order": "cd order-service && npm run dev"
  },
  "keywords": [
    "grpc",
    "microservices",
    "ecommerce",
    "nodejs",
    "postgresql",
    "sequelize",
    "docker",
    "docker compose"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ecommerce-grpc-microservices.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ecommerce-grpc-microservices/issues"
  },
  "homepage": "https://github.com/yourusername/ecommerce-grpc-microservices#readme",
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.7.15"
  }
}
